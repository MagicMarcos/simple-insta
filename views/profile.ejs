<!DOCTYPE html>
<html>
	<head>
		<title>GardnerGram</title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
			crossorigin="anonymous"
		/>
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
		/>
		<link
			href="https://fonts.googleapis.com/css2?family=Kanit:wght@300;400&family=Roboto:wght@400;500&family=Ubuntu&family=Zen+Kurenaido&display=swap"
			rel="stylesheet"
		/>
		<link rel="stylesheet" href="style.css" />
	</head>
	<body>
		<div class="container-fluid">
			<div class="container">
				<header class="d-flex justify-content-between align-items-center my-3">
					<img class="headerLogo" src="/img/gg.png" alt="GardnerGram Logo" />
					<div>
						<a href="/feed" class="btn btn-primary btn-sm mx-3">Feed</a>
						<a href="/logout" class="btn btn-primary btn-sm">Logout</a>
					</div>
				</header>
			</div>
		</div>
		<div class="container">
			<div class="row">
				<!-- LOCAL INFORMATION -->
				<div class="col-12 d-flex flex-column align-items-start my-3">
					<h2>Make A Post</h2>
					<% if (user.local.email) { %>
					<form action="/makePost" enctype="multipart/form-data" method="POST">
						<input type="file" name="file-to-upload" class="fileUpload" />
						<div class="d-flex justify-content-start">
							<div class="input-group mb-3">
								<input
									type="text"
									class="form-control"
									name="caption"
									placeholder="caption"
								/>
								<button
									class="btn btn-outline-secondary"
									type="submit"
									id="button-addon2"
								>
									Submit
								</button>
							</div>
						</div>
					</form>
				</div>
				<% } %>
			</div>
			<div class="col-12">
				<div class="row d-flex align-items-start justify-content-center">
					<% posts.forEach(post => { %>
					<div class="col-sm-12 col-md-6 col-lg-4 mx-auto cardCont">
						<div class="card my-3 mx-auto">
							<div class="card-body">
								<a href="/page/<%= post._id %>"
									><h4><%= post.userName %></h4></a
								>
							</div>
							<a
								href="/post/<%= post._id %>"
								class="d-flex justify-content-center"
							>
								<img src="<%= post.img %>" class="card-img-top" alt="..." />
							</a>
							<div class="card-body">
								<div class="d-flex justify-content-between align-items-center">
									<p>
										<span data-id="<%= post._id %>"><%= post.postLikes %></span>
										Likes
									</p>
									<a href="#" class="btn btn-primary likeBtn">Like</a>
								</div>
								<a href="/post/<%= post._id %>">
									<div
										class="d-flex justify-content-between align-items-center"
									>
										<p>
											<strong><%= post.userName %></strong>
											<%= post.caption%>
										</p>
									</div>
								</a>
							</div>
						</div>
					</div>
					<%})%>
				</div>
			</div>
		</div>

		<script src="main.js"></script>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"
		></script>
	</body>
</html>

<!DOCTYPE html>
<html>
	<head>
		<title>GardnerGram</title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
			crossorigin="anonymous"
		/>
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
		/>
		<link
			href="https://fonts.googleapis.com/css2?family=Kanit:wght@300;400&family=Roboto:wght@400;500&family=Ubuntu&family=Zen+Kurenaido&display=swap"
			rel="stylesheet"
		/>
		<link rel="stylesheet" href="/style.css" />
	</head>
	<body>
		<div class="container-fluid">
			<div class="container">
				<header class="d-flex justify-content-between align-items-center my-3">
					<img class="headerLogo" src="/img/gg.png" alt="GardnerGram Logo" />
					<div>
						<a href="/feed" class="btn btn-primary btn-sm">Feed</a>
						<a href="/profile" class="btn btn-primary btn-sm">Profile</a>
						<a href="/logout" class="btn btn-primary btn-sm">Logout</a>
					</div>
				</header>
			</div>
		</div>

		<div class="container">
			<div class="row">
				<div
					class="
						col-sm-6
						mx-auto
						my-3
						d-flex
						flex-column
						justify-content-center
						align-items-center
					"
				>
					<% posts.forEach(post => { %>
					<div class="card my-3">
						<div class="card-body">
							<a href="/page/<%= post._id %>"><h4><%= post.userName %></h4></a>
						</div>
						<a
							href="/post/<%= post._id %>"
							class="d-flex justify-content-center"
						>
							<img src="../<%= post.img %>" class="card-img-top" alt="..." />
						</a>
						<div class="card-body">
							<div class="d-flex justify-content-between align-items-center">
								<p>
									<span data-id="<%= post._id %>"><%= post.postLikes %></span>
									Likes
								</p>
								<a href="#" class="btn btn-primary likeBtn">Like</a>
							</div>
							<a href="/post/<%= post._id %>">
								<div class="d-flex justify-content-between align-items-center">
									<p>
										<strong><%= post.userName %></strong>
										<%= post.caption%>
									</p>
								</div>
							</a>
						</div>
						<div class="card-body">
							<h3>comments</h3>
							<form action="/comment/<%= post._id %>" method="POST">
								<div class="input-group mb-3">
									<input
										type="text"
										class="form-control"
										placeholder="comment"
										name="comment"
									/>
									<button
										class="btn btn-outline-secondary"
										type="submit"
										id="button-addon2"
									>
										Submit
									</button>
								</div>
							</form>

							<%comments.forEach(comment => {%>
							<p>
								<strong><%= comment.userName %></strong>
								<%= comment.comment%>
							</p>
							<%})%>
						</div>
					</div>
					<%})%>
				</div>
			</div>
		</div>

		<script src="/main.js"></script>
	</body>
</html>
